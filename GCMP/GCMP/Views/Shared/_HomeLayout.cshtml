<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="" content="">

    <!-- Le styles -->
    @Styles.Render("~/Content/css/home")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/toastr")
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/css/clippy.css" media="all">
</head>
<body>


    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/home">Trang chủ</a>

                @{Html.RenderAction("CategoriesMenu", "Home");}
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-ex1-collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            <a href="">@User.Identity.Name
                            </a>
                        </li>
                        
                        <li>
                            <a href="@Url.Action("LogOff", "Account", new { username = @User.Identity.Name })">Thoát
                            </a>
                        </li>
                        <li>
                            <a href="">Thông báo</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="" data-toggle="modal" data-target="#loginModal">Đăng nhập/ Đăng ký
                            </a>
                        </li>
                    }
                    <li>
                        <a href="#">Giỏ hàng</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
