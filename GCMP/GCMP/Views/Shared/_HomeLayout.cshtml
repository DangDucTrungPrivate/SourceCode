    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li>
                            <a href="#home">Trang chủ</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;
                        </li>
                        <li>
                            <a href="#about">Thông tin</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;
                        </li>
                        <li>
                            <a href="#services">Dịch vụ</a>
                        </li>
                        <li class="footer-menu-divider">&sdot;
                        </li>
                        <li>
                            <a href="#contact">Liên hệ</a>
                        </li>
                    </ul>
                    <p class="copyright text-muted small">
                        Copyright &copy; GCMP 2014. All Rights Reserved
                    </p>
                </div>
            </div>
        </div>
    </footer>

    @if (!Request.IsAuthenticated)
    {
        <!-- login container -->
        <div class="modal fade small" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" style="width: 900px;">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="myModalLabel">Đăng nhập</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-6 ">
                                @{ Html.RenderAction("Authentication", "Account"); }
                            </div>
                            <div class="col-lg-6 ">
                                Đăng nhập bằng:
                            

                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>
    }



